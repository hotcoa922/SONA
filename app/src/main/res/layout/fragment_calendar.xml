<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendar.CalendarFragment">

    <com.applikeysolutions.cosmocalendar.view.CalendarView
        android:id="@+id/cosmo_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:connectedDayIconPosition="top"
        app:currentDayTextColor="@color/default_connected_day_selected_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301"
        app:orientation="horizontal"
        app:selectedDayBackgroundColor="@color/default_selected_day_background_color"
        app:selectedDayBackgroundEndColor="@color/default_selected_day_background_end_color"
        app:selectedDayBackgroundStartColor="@color/default_selected_day_background_start_color"
        app:selectionType="single"
        app:weekendDayTextColor="@color/red" />


</androidx.constraintlayout.widget.ConstraintLayout>
