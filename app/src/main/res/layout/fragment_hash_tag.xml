<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".writediary.HashTagFragment">


    <TextView
        android:id="@+id/announcement_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택된 해시태그(최대 8개)"
        app:layout_constraintBottom_toTopOf="@+id/profile_guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.066" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#기본 해쉬태그"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_guideline1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#사용자 지정 해쉬태그"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_guideline2" />

    <Button
        android:id="@+id/df_hstag_bt1"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/df_hstag_bt5"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/df_hstag_bt2"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/df_hstag_bt1"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt3"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt1"
        app:layout_constraintTop_toTopOf="@+id/df_hstag_bt1" />

    <Button
        android:id="@+id/df_hstag_bt3"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/df_hstag_bt2"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt4"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt2"
        app:layout_constraintTop_toTopOf="@+id/df_hstag_bt2" />

    <Button
        android:id="@+id/df_hstag_bt4"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/df_hstag_bt3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt3"
        app:layout_constraintTop_toTopOf="@+id/df_hstag_bt3" />

    <Button
        android:id="@+id/df_hstag_bt5"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/profile_guideline2"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/df_hstag_bt1" />

    <Button
        android:id="@+id/df_hstag_bt6"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/df_hstag_bt5"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt7"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt5"
        app:layout_constraintTop_toTopOf="@+id/df_hstag_bt5" />

    <Button
        android:id="@+id/df_hstag_bt7"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/df_hstag_bt6"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt8"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt6"
        app:layout_constraintTop_toTopOf="@+id/df_hstag_bt6" />

    <Button
        android:id="@+id/df_hstag_bt8"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/df_hstag_bt7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt7"
        app:layout_constraintTop_toTopOf="@+id/df_hstag_bt7" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가하기"
        app:layout_constraintBottom_toTopOf="@+id/profile_guideline3"
        app:layout_constraintEnd_toStartOf="@+id/username_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/username_tv"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:gravity="top"
        android:hint="내용을 입력하세요."
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <Button
        android:id="@+id/hashtag_save_bt"
        android:layout_width="101dp"
        android:layout_height="27dp"
        android:text="선택완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_guideline4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#추가된 해시태그"
        app:layout_constraintBottom_toTopOf="@+id/profile_guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_guideline3" />

    <SeekBar
        android:id="@+id/seekBar2"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:max="20"
        android:progress="10"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.77" />

    <SeekBar
        android:id="@+id/seekBar1"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="12dp"
        android:max="20"
        android:progress="10"
        app:layout_constraintBottom_toTopOf="@+id/seekBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.934" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="활동적"
        app:layout_constraintBottom_toTopOf="@+id/seekBar2"
        app:layout_constraintEnd_toStartOf="@+id/seekBar1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.922" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="정적"
        app:layout_constraintBottom_toTopOf="@+id/seekBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toEndOf="@+id/seekBar1"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.922" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="좋음"
        app:layout_constraintBottom_toTopOf="@+id/profile_guideline3"
        app:layout_constraintEnd_toStartOf="@+id/seekBar2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.27" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나쁨"
        app:layout_constraintBottom_toTopOf="@+id/profile_guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seekBar2"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.27" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="210dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>