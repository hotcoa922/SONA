<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".writediary.HashTagFragment">


    <TextView
        android:id="@+id/announcement_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택된 해시태그(최대 8개)"
        app:layout_constraintBottom_toTopOf="@+id/profile_guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#기본 해쉬태그"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_guideline1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#사용자 지정 해쉬태그"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_guideline2" />

    <Button
        android:id="@+id/df_hstag_bt1"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="166dp" />

    <Button
        android:id="@+id/df_hstag_bt"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt2"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt1"
        tools:layout_editor_absoluteY="166dp" />

    <Button
        android:id="@+id/df_hstag_bt2"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt3"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt"
        tools:layout_editor_absoluteY="166dp" />

    <Button
        android:id="@+id/df_hstag_bt3"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt2"
        tools:layout_editor_absoluteY="166dp" />

    <Button
        android:id="@+id/df_hstag_bt4"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="219dp" />

    <Button
        android:id="@+id/df_hstag_bt5"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt6"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt4"
        tools:layout_editor_absoluteY="219dp" />

    <Button
        android:id="@+id/df_hstag_bt6"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/df_hstag_bt7"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt5"
        tools:layout_editor_absoluteY="219dp" />

    <Button
        android:id="@+id/df_hstag_bt7"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/df_hstag_bt6"
        tools:layout_editor_absoluteY="219dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/username_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_guideline2" />

    <TextView
        android:id="@+id/username_tv"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:gravity="top"
        android:hint="내용을 입력하세요."
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3" />

</androidx.constraintlayout.widget.ConstraintLayout>